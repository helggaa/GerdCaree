        android:textColor="@color/black"
        android:padding="0dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="285dp"
        android:text="Sat&#10;21"
        android:textSize="14sp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:padding="0dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button7"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="340dp"
        android:text="Sun&#10;22"
        android:textSize="14sp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:padding="0dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <TextView
        android:id="@+id/textViewFeeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="122dp"
        android:layout_marginTop="170dp"
        android:text="How's your feeling today?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textStyle="bold"
        android:textColor="@color/black"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonSad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sad"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="185dp"
            android:layoutDirection="ltr"
            android:button="@drawable/custom_icon"
            android:buttonTint="@color/black"
            android:textColor="@color/black"/>

        <RadioButton
            android:id="@+id/radioButtonHappy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="185dp"
            android:layoutDirection="ltr"
            android:button="@drawable/custom_icon"
            android:buttonTint="@color/black"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/radioButtonMad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mad"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="185dp"
            android:layoutDirection="ltr"
            android:button="@drawable/custom_icon"
            android:buttonTint="@color/black"
            android:textColor="@color/black"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textViewRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="245dp"
        android:text="Rate your emotion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textStyle="bold"
        android:textColor="@color/black"/>

    <RadioGroup
        android:id="@+id/radiorate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="265dp">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/raterb"
            android:buttonTint="@color/pink"/>
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/raterb"
            android:layout_marginStart="180dp"
            android:layout_marginTop="-49dp"
            android:buttonTint="@color/pink"/>
        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/raterb"
            android:layout_marginStart="300dp"
            android:layout_marginTop="-49dp"
            android:buttonTint="@color/pink"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiorate"
        android:layout_marginStart="40dp">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:text="2"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:text="3"
            android:textColor="@color/black"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="365dp"
        android:layout_height="275dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/frambg"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="12dp"
            android:text="Whatâ€™s symptom did you feel today?"
            android:textColor="@color/black"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/cbs1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@drawable/cbstyle"
                android:text="Headache"
                android:buttonTint="@color/black"
                android:textColor="@color/black"/>

            <CheckBox
                android:id="@+id/cbs2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@drawable/cbstyle"
                android:text="Nauseous"
                android:buttonTint="@color/black"
                android:textColor="@color/black"/>

            <CheckBox
                android:id="@+id/cbs3"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@drawable/cbstyle"
                android:text="Vomit"
                android:buttonTint="@color/black"
                android:textColor="@color/black"/>

            <CheckBox
                android:id="@+id/cbs4"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@drawable/cbstyle"
                android:text="Heartburn"
                android:buttonTint="@color/black"
                android:textColor="@color/black"/>

            <CheckBox
                android:id="@+id/cbs5"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:button="@drawable/cbstyle"
                android:text="Bloated"
                android:buttonTint="@color/black"
                android:textColor="@color/black"/>
        </TableLayout>

    </FrameLayout>

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="640dp"
        android:background="@drawable/submitbtn"
        android:backgroundTint="@color/purple"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/menu_bawah_actdua"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        app:tabMode="fixed"
        app:tabIndicatorHeight="0dp"/>
