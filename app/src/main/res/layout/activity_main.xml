<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:background="@color/white">

<TextView
    android:id="@+id/tWelcome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Welcome to"
    android:textColor="#FF597B"
    android:textSize="48dp"
    android:textAlignment="center"
    android:textStyle="bold"
    android:layout_marginTop="150dp"
    android:layout_centerHorizontal="true"/>

<ImageView
    android:id="@+id/ivLogo"
    android:layout_width="128dp"
    android:layout_height="128dp"
    android:layout_below="@+id/tWelcome"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/logo_final" />

<TextView
    android:id="@+id/tAppName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ivLogo"
    android:layout_marginTop="20dp"
    android:text="GerdCare"
    android:textColor="#FF597B"
    android:textSize="48dp"
    android:textAlignment="center"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"/>

<Button
    android:id="@+id/bStart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tAppName"
    android:layout_marginTop="130dp"
    android:drawableEnd="@drawable/round_navigate_next_24"
    android:text="Start!"
    android:textStyle="bold"
    android:textSize="16sp"
    android:layout_centerHorizontal="true"
    android:backgroundTint="#FF597B"/>

</RelativeLayout>