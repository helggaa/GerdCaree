<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmAct"
    android:background="@color/white">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/top"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        android:text="Thursday,"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:layout_marginStart="40dp"
        android:text="19 October 2023"
        android:textColor="#3B4453"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/breakfastimg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/breakfast" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="210dp"
        android:layout_marginStart="150dp"
        android:text="Breakfast"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:layout_marginStart="150dp"
        android:text="07.00"
        android:textColor="#3B4453"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/edit1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="250dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/edit"
        android:onClick="onEditAlarmButtonClick"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="310dp"
        app:thumbTint="@drawable/thump"
        app:trackTint="@drawable/track" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="320dp"
        app:srcCompat="@drawable/lunch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="330dp"
        android:layout_marginStart="150dp"
        android:text="Lunch"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="370dp"
        android:layout_marginStart="150dp"
        android:text="12.00"
        android:textColor="#3B4453"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="370dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/edit" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="310dp"
        app:thumbTint="@drawable/thump"
        app:trackTint="@drawable/track"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="440dp"
        app:srcCompat="@drawable/dinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="450dp"
        android:layout_marginStart="150dp"
        android:text="Dinner"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="490dp"
        android:layout_marginStart="150dp"
        android:text="13.00"
        android:textColor="#3B4453"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/edit3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="490dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/edit" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="455dp"
        android:layout_marginEnd="310dp"
        app:thumbTint="@drawable/thump"
        app:trackTint="@drawable/track" />

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/plusbtn"
        android:layout_marginStart="320dp"
        android:layout_marginTop="550dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"/>
</RelativeLayout>